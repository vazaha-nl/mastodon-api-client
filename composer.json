{
    "authors": [
        {
            "email": "lennart@vazaha.nl",
            "name": "Lennart Hengstmengel"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vazaha\\Mastodon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Tools\\": "tools/src"
        }
    },
    "description": "A fully typed mastodon API client for PHP",
    "license": "MIT",
    "name": "vazaha/mastodon-api-client",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.7",
        "illuminate/support": "^9 || ^10",
        "nesbot/carbon": "^2.68",
        "illuminate/collections": "^9 || ^10"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7",
        "ergebnis/php-cs-fixer-config": "^5.12",
        "twig/twig": "^3.7"
    },
    "scripts": {
        "check-style": [
            "php-cs-fixer fix --diff --dry-run"
        ],
        "fix-style": [
            "php-cs-fixer fix"
        ],
        "test": [
            "vendor/bin/phpunit"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ]
    },
    "type": "library",
    "config": {
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vazaha\\Mastodon\\ServiceProvider"
            ]
        }
    }
}
